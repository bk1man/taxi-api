# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=root123456
DB_NAME=taxi

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 地图服务配置（可选）
MAP_API_KEY=your-map-api-key
